# User configuration of the oh my zsh vi-mode plugin
# andihafner.com 2023

# source this script at the bottom of ~/.zshrc

set -o vi

export VI_MODE_SET_CURSOR=true
export VI_MODE_CURSOR_NORMAL=1 # Blinking block
export VI_MODE_CURSOR_INSERT=3 # Blinking underline

export MODE_INDICATOR="%F{red}[N]%f"
export INSERT_MODE_INDICATOR="%F{green}[I]%f"

